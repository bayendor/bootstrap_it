<h1>Steve's Tech Blog</h1>
<table class="table table-condensed table-hover">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><button type="button" class="btn btn_info"><%= link_to 'Show', action: :show, id: post.id %></td>
      <td><button type="button" class="btn btn_info"><%= link_to 'Edit', action: :edit, id: post.id %></td>
      <td><button type="button" class="btn btn_info"><%= link_to 'Destroy', { action: :destroy, id: post.id },
                      method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>